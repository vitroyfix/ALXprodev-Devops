#!/bin/bash

POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
DIR="pokemon_data_parallel"
mkdir -p "$DIR"

# Function to fetch a single Pokemon
fetch_pokemon() {
    local pokemon=$1
    echo "Fetching $pokemon..."
    curl -s "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "$DIR/$pokemon.json"
    if [ $? -eq 0 ] && [ -s "$DIR/$pokemon.json" ]; then
        echo "$pokemon saved ✔️"
    else
        echo "[$(date)] Failed: $pokemon" >> errors.txt
    fi
}

# Run all fetches in parallel
for p in "${POKEMONS[@]}"; do
    fetch_pokemon "$p" &
done

# Wait for all background jobs to finish
wait

# List jobs (optional, for test)
jobs

echo "All downloads complete."
