#!/bin/bash

JSON_FILE="data.json"

# Extract data from JSON
name=$(jq -r '.name' "$JSON_FILE" | sed 's/.*/\u&/')
type=$(jq -r '.types[0].type.name' "$JSON_FILE" | sed 's/.*/\u&/')

# Format height and weight (divide by 10)
formatted_height=$(jq -r '.height' "$JSON_FILE" | awk '{printf "%.1f", $1/10}')
formatted_weight=$(jq -r '.weight' "$JSON_FILE" | awk '{printf "%.1f", $1/10}')

# Human-readable output (matches test)
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
